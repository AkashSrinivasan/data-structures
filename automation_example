#include <stdio.h>
#include<conio.h>

int main()
{
    int num,flagNo=2,flag,a=0;
   printf("this is the flagNO= %d\n",flagNo);
    flag = flagNo;
    printf("the flag value is =%d\n",flag);
   for(int i=0;i<=flag;i++){
       a = a+1;
   }
   printf("increased flag value is=%d\n",a);
   flagNo=a;
   printf("now the flagNo Value will be=%d\n",flagNo);
    
    return 0;
}
