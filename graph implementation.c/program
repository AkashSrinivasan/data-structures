#include <stdio.h>
#include <stdlib.h>
struct node {
    int data;
    struct node *next;
};

int main()
{
    
    int i,nodes;
    printf("enter the nodes:");
    scanf("%d",&nodes);
    struct node *arr[nodes];
    for(i=0;i<nodes;i++)
    {
        arr[i] = NULL;
    }
    read(arr,nodes);
    print(arr,nodes);

    return 0;
}
void read(struct node *arr[], int nodes)
{
    struct node *new_node;
    int i,j,k,val;
    for(i=0;i<nodes;i++)
    {
        struct node *last = NULL;
        printf("enter the neighbour of %d ",i+1);
        scanf("%d",&k);
        for(j=0;j<k;j++)
        {
            printf("enter the value of %d neighbour of %d",j+1,i+1);
            scanf("%d",&val);
            new_node = (struct node*)malloc(sizeof(struct node*));
            new_node -> data = val;
            new_node -> next = NULL;
            if(arr[i]==NULL)
            {
                arr[i] = new_node;
            }
            else
            {
                last->next = new_node;
            }
            last = new_node;
            
        }
        
    }
    
}
void print(struct node *arr[],int nodes)
{
    struct node *ptr = NULL;
    int i,j;
    for(i=0;i<nodes;i++)
    {
        ptr = arr[i];
        printf("the neighbour of %d is : ",i+1);
        while(ptr!=NULL)
        {
            printf("%d\t",ptr->data);
            ptr = ptr->next;
        }
    }
}
