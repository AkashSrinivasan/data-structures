#include <stdio.h>
#include <string.h>

int main()
{
    char a[100],d;
    int i,j,k,l,count=1;
    
    printf("Hello World=");
    scanf("%s",&a);
    j=strlen(a);
    
    for(i=0;i<j;i++)
    {
        if(a[i]==a[i+1])
        {
            count=count+1;
            
        }
        else  //(a[i]!=a[i+1])
        {
            printf("%c%d",a[i],count);
            count=1;
            
        }
       
    }

    return 0;
}
